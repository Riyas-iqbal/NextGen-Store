<div class="text-sm font-weight-bold text-primary ml-3 mb-4"><a href="/admin/home" class="hover-1">Admin </a> <i class="fa-solid fa-angle-right"> </i> <a href="/admin/view-products" class="hover-1">Products</a></div>
<!-- Begin Page Content -->
<div class="container-fluid p-0">
            
    <h2 class="font-weight-bold mb-5 pl-5 hover-3 overflow-hidden ">Manage Products</h2>

    <a href="/admin/add-products" class="btn btn-primary m-3">Add New Product</a>

    <table class="table table-responsive table-hover align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Name | Description</th>
                <th>Price</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <img src="/product-image/{{this._id}}.jpg" alt="" style="width: 45px; height: 45px" class="" />
                        <div class="ms-3">
                            <p class="fw-bold mb-1 ">{{this.name}}</p>
                            
                            <p class="text-muted mb-0 d-none d-md-block">{{this.description}}</p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="fw-normal bold mb-1"><strong>â‚¹{{this.price}}</strong></p>
                    <p class="text-muted mb-0">{{this.category}}</p>
                </td>
                <td>
                    <a type="button" href="/admin/edit-product?id={{this._id}}" id="element" data-bs-toggle="tooltip"
                        data-bs-placement="left" title="Edit {{this.name}}" class="badge badge-primary btn btn-sm btn-rounded">
                        Edit
                    </a>
                </td>
                <td>
                    <!-- Block User Button trigger modal -->
                    <a type="button" class="badge badge-danger btn btn-sm btn-rounded" data-toggle="modal"
                        data-target="#exampleModalCenter{{this._id}}">
                        Delete
                    </a>
                    <!-- Modal Pop up to Block User start-->
                    <div class="modal fade" id="exampleModalCenter{{this._id}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Delete Product</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to Delete <strong class="text-capitalize">{{this.name}}</strong>. This will
                                    restict him from accessing Nextgen Store
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class=" badge badge-secondary btn btn-sm btn-rounded"
                                        data-dismiss="modal">Close</button>
                                    <a href="/admin/delete-product/{{this._id}}" class="badge badge-danger btn btn-sm btn-rounded"
                                        data-bs-toggle="tooltip" data-bs-placement="left" title="Delete {{this.name}}">
                                        DELETE
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal Pop up to Block User end-->
                </td>
            </tr>
            <tr>
                {{/each}}

        </tbody>
    </table>

</div>
<!-- /.container-fluid -->




